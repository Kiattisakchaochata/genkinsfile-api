pipeline {
    agent any

    environment {
        PATH = "/usr/local/bin:$PATH"
    }

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/Kiattisakchaochata/genkinsfile-api.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'which docker'
                sh 'docker build -t my-web-cicd .'
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker rm -f my-web || true'
                sh 'docker run -d --name my-web -p 5000:5000 my-web-cicd'
            }
        }
    }

    post {
        success {
            echo "✅ Build and deployment successful!"
        }
        failure {
            echo "❌ Build failed. Please check logs."
        }
    }
}